<?xml version="1.0" encoding="utf-8"?>
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="570dp"
         android:layout_height="310dp"
         android:layout_gravity="center|bottom"
         android:orientation="vertical"
         android:gravity="center_vertical"
         android:weightSum="3" >
                  
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:orientation="vertical"
             android:gravity="center_horizontal"
             android:visibility="visible">

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal" >

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="35dp"
                     android:gravity="center_vertical"
                     android:text="Blood Glucose"
                     android:layout_marginRight="20dp"
                     android:textSize="16sp"
                     android:textStyle="bold" />

                 <LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="match_parent">
                 
	                 <EditText
	                     android:id="@+id/editSMBGcorrOnly"
	                     android:layout_width="80dp"
	                     android:layout_height="35dp"
	                     android:ems="10"
	                     android:gravity="center_vertical"
	                     android:hint="mg/dl"
	                     android:imeOptions="actionDone"
	                     android:inputType="numberDecimal"
	                     android:numeric="decimal"
	                     android:textSize="16sp" >
	
	                     <requestFocus />
	                 </EditText>
	
	                 <TextView
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:layout_marginLeft="20dp"
	                     android:gravity="center_vertical"
	                     android:text="mg/dl"
	                     android:textSize="16sp"
	                     android:textStyle="bold" />
	                 
	             </LinearLayout>
             </LinearLayout>
                 
             <LinearLayout
	             android:layout_width="match_parent"
	             android:layout_height="30dp"
	             android:layout_weight="1"
	             android:orientation="vertical"
	             android:visibility="visible" >
	             
             </LinearLayout>
             

             <LinearLayout
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:layout_weight="1"
	             android:orientation="vertical"
             	 android:gravity="center_horizontal"
	             android:visibility="visible" >
	
	             <LinearLayout
	                 
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginBottom="0dp"
	                 android:layout_marginTop="10dp"
	                 android:orientation="horizontal" >
		        	
	                 <Button
	                     android:id="@+id/CancelSMBGinputButton"
	                     android:layout_width="140sp"
	                     android:layout_height="56sp"
	                     android:background="@drawable/android_cancel_button"
	                     android:onClick="CancelSMBGinputClick"
	                     android:soundEffectsEnabled="true"
	                     android:textSize="16sp"
	                     android:textStyle="bold"
	                     android:visibility="visible" />
	             
	                 <LinearLayout
	                     android:layout_width="wrap_content"
                     	 android:layout_marginLeft="80dp"
	                     android:layout_height="match_parent">
		                
	                     <Button
		                     android:id="@+id/DoneSMBGinputButton"
		                     android:layout_width="140sp"
		                     android:layout_height="56sp"
		                     android:background="@drawable/android_done_button"
		                     android:onClick="DoneSMBGinputClick"
		                     android:soundEffectsEnabled="true"
		                     android:textSize="16sp"
		                     android:textStyle="bold"
		                     android:visibility="visible" />
	             	 
	             	 </LinearLayout>
		             
	             </LinearLayout>
		                
	         </LinearLayout>
         </LinearLayout>

     </LinearLayout>